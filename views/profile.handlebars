<h2>Welcome, {{username}}!</h2>
<h3>Current posts:</h3>



<div class="row mt-4">
    {{#each posts as |post| }}
    <div class="post-list">
        <div class="d-flex flex-row-a"></div>
        <div class="card border-info mb-3">
            <a href="post/{{post.id}}">
                <div class="card-header d-flex justify-content-between">{{post.title}}
            </a>
            <small> {{ ../username}} Created: {{format_date post.date_created}} <button class="btn btn-sm btn-danger"
                    data-id="{{post.id}}">DELETE</button>
            </small>
        </div>
        <div class="card-body">
            <h4 class="card-title"></h4>
            <p class="card-text"> {{post.content}} </p>
        </div> 
{{#if post.comments }}
<div class="comments mx-2">
    <table class="table table-primary mb-2">
        <th scope="row mb-0">
            <h4 class="mb-0">Comments</h4>
        </th>
    </table>
    <div class="comment">
        <table class="table ">

            {{#each post.comments}}

            <tr>
                <td> &mdash;{{format_date createdAt}}</td>
                <td>{{comment}}</td>

            </tr>
    </div>
    {{/each}}
    </table>

</div>
{{/if}}
 </div>

</div>
{{/each}}
</div>





