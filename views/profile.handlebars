<h2>Welcome, {{username}}!</h2>
<button class="btn btn-success" data-toggle="modal" data-target="#newPostModal">NEW POST</button>
<h3>Current posts:</h3>

{{#each posts as |post|}}
<div class="card border-info mb-2 mx-2" >
    <a href="post/{{post.id}}">
        <div class="card-header d-flex justify-content-between py-1"> <h3>{{post.title}} </h3>
    </a>
    <small> <button class="btn btn-sm btn-danger" data-id="{{id}}">DELETE</button>
    </small>
</div>
    <div class="card-body">
        <h4 class="card-title">Info card title</h4>
<p class="card-text"> {{post.content}} </p>
    </div>
</div>
{{/each}}


<button class="btn btn-primary">New post!</button>

<div class="modal" id="newPostModal" tabindex="-1" role="dialog"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AddNewPost">Add New Post</h5>

            </div>
            <form class="form new-post-form">
                <div class="modal-body">
                    <div class="row mt-1">
                        <div class="form-group ">
                            <label for="post-title">Title </label>
                            <input class="form-input form-control mb-3" type="text" id="post-title" name="post-title"
                                value="{{post.title}}">
                            <div class="form-group">
                                <label for="post-content">Description</label>
                                <input class="form-input form-control mb-3" type="text" id="post-content"
                                    name="post-content" value="{{post.content}}">
                                    <div class="modal-footer">
                                        <button type="submit" id="btn-submit" class="btn btn-primary">Save Post</button>
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal" >Close</button>
                                    </div>
                            </div>
                        </div>
                    </div>
            </form>
        </div>
    </div>
</div>





