<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>



{{#each posts as |post| }}
<div class="d-flex flex-column-a">
<div class="card border-info mb-3">
    
        <div class="card-header d-flex justify-content-between">
            <a href="post/{{id}}"><h4>{{post.title}}</h4>
    </a>
    <small> {{ user.username}} Created: {{format_date post.date_created}} </small></a>
</div>
<div class="card-body">
    <h4 class="card-title"></h4>
    <p class="card-text"> {{post.content}} </p>
</div>

{{#if post.comments }}
<div class="comments mx-2">
<table class="table table-primary mb-2">
   <th scope="row mb-0">
   <h4 class="mb-0">Comments</h4></th>
    </table>
   <div class= "comment">
    <table class="table ">
      
        {{#each post.comments}}

    <tr>
        <td> &mdash;{{format_date createdAt}}</td> <td>{{comment}}</td>

    </tr>
    </div>
    {{/each}}
    </table>
    
</div>
{{/if}}
</div>
          

</div>
</div>


</div>
{{/each}}
</div>
