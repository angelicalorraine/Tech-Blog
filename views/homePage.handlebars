<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>

{{#each blogs as |blog| }}
<div class="d-flex flex-row-a"></div>
<div class="card border-info mb-3">
    <a href="blog/{{blog.id}}">
    <div class="card-header d-flex justify-content-between">{{blog.blog_title}} 
        </a>
        <small> {{ user.username}} Created: {{format_date blog.date_created}} </small></div>
    <div class="card-body">
        <h4 class="card-title"></h4>
        <p class="card-text"> {{blog.description}} </p>

    </div>
    
    </div>
    {{/each}}